@model QuinielasModel.DTO.Pools.UpdatePool

@{
    ViewData["Title"] = "Editar quiniela";
}

<div class="pagetitle">
    <h1>Editar quiniela</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Inicio</a></li>
            <li class="breadcrumb-item">Quinielas</li>
            <li class="breadcrumb-item active">Editar Quiniela</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Editar Quiniela</h5>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Id" type="hidden" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsersLimit" class="control-label"></label>
                            <input asp-for="UsersLimit" class="form-control" required min="1" max="100" />
                            <span asp-validation-for="UsersLimit" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<div>
    <a asp-action="Mine">Volver al administrador de quinielas</a>
</div>
