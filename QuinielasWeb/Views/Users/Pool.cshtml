@model QuinielasModel.DTO.Users.PoolUsers

@{
    ViewData["Title"] = $"{Model.PoolName} - Participantes";
    int number = 0;
}

<div class="pagetitle">
    <h1>Administrar Quinielas</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Inicio</a></li>
            <li class="breadcrumb-item">Quinielas</li>
            <li class="breadcrumb-item active">Administrar Quinielas</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Participantes de @Model.PoolName</h5>
                    <a href="#">Agregar participante</a>
                    <table class="table table-striped table-hover mt-3">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Participante</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Users!)
                            {
                                number++;
                                <tr>
                                    <td>
                                        @number
                                    </td>
                                    <td>
                                        item.Username
                                    </td>
                                    <td>
                                        <a href="#" onclick="confirmRemove(@item.Id)" style="color:red">Expulsar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/quinielas/quiniela/@Model.PoolId" class="mt-3">Volver a la quiniela</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>
        function confirmRemove(id, user) {
            showAlert('Confirmar', `¿Estás seguro de que quieres expulsar a ${user} de esta quiniela?`, 'warning', true, 'No', 'Sí').then(confirmed => {
                if (confirmed) {
                    const URL = `/users/remove/@Model.PoolId/${id}`;
                    $.post(URL, function (data) {
                        if (data) {
                            showAlert(data.alert, data.alertMessage, data.alertIcon, false, '', 'Aceptar').then(confirmed => {
                                window.location.replace(data.redirectUrl);
                            });
                        }
                    });
                }
            });
        }
    </script>
}
