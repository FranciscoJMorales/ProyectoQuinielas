@model IEnumerable<ProyectoQuinielas.Models.DTO.QuinielaView>

@{
    ViewData["Title"] = "Quinielas";
}

<div class="pagetitle">
    <h1>Otras Quinielas</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Inicio</a></li>
            <li class="breadcrumb-item">Quinielas</li>
            <li class="breadcrumb-item active">Otras Quinielas</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Privada)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Participantes)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Administrador)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Privada)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Participantes)/@Html.DisplayFor(modelItem => item.Límite)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Administrador)
                                    </td>
                                    <td>
                                        <a asp-action="Enter" asp-route-id="@item.Id">Ingresar</a> |
                                        <a asp-action="Leave" asp-route-id="@item.Id" style="color:red">Abandonar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br>
                    <a href="/dashboard">Volver al inicio</a>
                </div>
            </div>
        </div>
    </div>
</section>
